			exx					=>     D9
	
			ex (sp), hl			=> [zilog] ? (E3) : (ED, 54)
[rabbit]	ex (sp), hl'		=> 76, ED, 54

			ex (sp), ix			=> DD, E3
			ex (sp), iy			=> FD, E3
	
			ex de, hl			=>     EB
[rabbit]	ex de', hl 			=>     E3
